[Unit]
Description=Host task service Worker
After=network.target mariadb.service
RequiresMountsFor=/mnt/reposfi

[Service]
Type=simple
WorkingDirectory=/usr/local/bin/appCataloga
ExecStart=/usr/local/bin/appCataloga/run_host_task.sh start
ExecStop=/usr/local/bin/appCataloga/run_host_task.sh stop
ExecReload=/usr/local/bin/appCataloga/run_host_task.sh restart
Restart=on-failure

[Install]
WantedBy=multi-user.target